<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/bar_tool"
        />
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    </FrameLayout>

    <ImageView
        android:layout_below="@+id/toolbar"
        android:id="@+id/head"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/only"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:text="Only books that have been returned is shown in the history table below"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/headerno"
        android:layout_below="@+id/only"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:text="No."
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/headertable"
        android:layout_below="@+id/only"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/headerno"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/remarks"
        android:layout_below="@+id/only"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@+id/headertable"
        android:text="Remarks"
        android:textStyle="bold"
        android:textSize="20sp"/>

</RelativeLayout>
